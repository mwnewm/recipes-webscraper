{
  "manifest_version": 2,
  "name": "Recipe WebScraper",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js" : [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js",
      "ingredient_scrape.js"
    ],
    "persistent": false
  },
  "browser_action":{
    "default_icon": "images/icon.png",
    "default_popup": "popup/index.html",
    "default_title": "Look for ingredients!"
  }
}
