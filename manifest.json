{
  "manifest_version": 2,
  "name": "Recipe WebScraper",
  "version": "0.0.1",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*.allrecipes.com/recipe/*"
      ],
      "js" : [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action":{
    "default_icon": "images/icon.png",
    "default_popup": "src/index.html"
  }
}
